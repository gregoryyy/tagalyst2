{
    "name": "Tagalyst 2",
    "description": "Organize ChatGPT chats: bookmark, tag, note, filter, browse, export.",
    "version": "0.2.0",
    "manifest_version": 3,
    "minimum_chrome_version": "114",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "content/util.js",
                "content/editors.js",
                "content/view.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon100.png"
    },
    "action": {
        "default_title": "ChatGPT DOM Tools"
    },
    "options_page": "options/options.html"
}
