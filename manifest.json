{
    "name": "ChatGPT DOM Tools",
    "description": "Collapse/expand, tag, and bookmark ChatGPT messages; jump to first/last.",
    "version": "0.1.1",
    "manifest_version": 3,
    "minimum_chrome_version": "114",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon100.png"
    },
    "action": {
        "default_title": "ChatGPT DOM Tools"
    }
}
