{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2021"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": false,
    "checkJs": false,
    "strict": false,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "content/**/*.ts",
    "options/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}
